{
  "compilerOptions": {
    "jsx": "react-jsx",
    "module": "ESNext",
    "target": "ESNext",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "declaration": true,
    "declarationDir": "dist",
    "outDir": "dist",
    "strict": true,
    "sourceMap": true,
    "skipLibCheck": true
  },
  "include": ["src", ".dot-tsx"]
}
